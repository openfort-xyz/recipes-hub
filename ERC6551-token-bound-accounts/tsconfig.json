{
  "compilerOptions": {
    "rootDir": "..",
    "baseUrl": ".",
    "outDir": "dist",
    "module": "commonjs",
    "target": "es2021",
    "lib": ["es2021"],
    "typeRoots": ["node_modules/@types"],
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "newLine": "LF",
    "noEmit": true,
    "strict": true,
    "noImplicitAny": false,
    "skipLibCheck": true,
    "esModuleInterop": true
  },
  "ts-node": {
    "transpileOnly": true
  }
}